<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A8CF1"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/et_expressions"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/shape_item_expression"
        android:ems="10"
        android:hint="ادخل عبارتك الجميلة"
        android:inputType="textPersonName"
        android:paddingRight="15dp"
        android:textColorHint="#7A8CF1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="#7A8CF1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_expressions" />
</androidx.constraintlayout.widget.ConstraintLayout>